{
    "name": "users-management",
    "version": "1.0.0",
    "type": "module",
    "description": "The objective of the project is to provide a base project with the minimum necessary tools to develop a project based on Node.JS.",
    "scripts": {
        "dev": "nodemon src/index.js",
        "start": "node src/index.js",
        "lint": "eslint src/**/*.js --fix",
        "prettier": "prettier --write .",
        "prepare": "husky install",
        "postinstall": "npm run prepare"
    },
    "dependencies": {
        "@sinclair/typebox": "^0.31.17",
        "ajv": "8.12.0",
        "ajv-errors": "3.0.0",
        "ajv-formats": "^2.1.1",
        "bcrypt": "^5.1.1",
        "dotenv": "16.3.1",
        "express": "4.18.2",
        "jose": "4.15.4",
        "mongoose": "7.6.1",
        "uuid": "9.0.1"
    },
    "author": {
        "name": "Linda Nicole",
        "url": "https://learnthisacademy.com"
    },
    "license": "MIT",
    "devDependencies": {
        "eslint": "8.40.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-config-standard": "17.0.0",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-n": "15.7.0",
        "eslint-plugin-promise": "6.1.1",
        "husky": "8.0.3",
        "lint-staged": "13.2.2",
        "nodemon": "2.0.22",
        "prettier": "2.8.8"
    },
    "imports": {
        "#Config/*": "./src/config/*",
        "#Controllers/*": "./src/controllers/*",
        "#Constants/*": "./src/constants/*",
        "#Dto/*": "./src/Dto/*",
        "#Lib/*": "./src/lib/*",
        "#Routes/*": "./src/routes/*",
        "#Schemas/*": "./src/schemas/*"
    },
    "lint-staged": {
        "*.js": "eslint --fix",
        "*.{js,md}": "prettier --write"
    }
}
